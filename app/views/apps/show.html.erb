<div class="col-md-8">

  <h1><%= @apps.app_name %>&nbsp;&nbsp;&nbsp;&nbsp;<button class="btn btn-primary" type="button">
      Events <span class="badge"><%= @events.count %></span>
  </button></h1>
</div>
  <div class=" col-md-4">
   <% if current_user %>
       <%= link_to "Delete App", @apps, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this app?' } %> 
    <% end %>
</div>

<div class="tables-lg">
<table class="table">
  <tr>
    <td>URL:</td>
    <td><%= @apps.url %></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><%= @apps.description %></td>
  </tr>
</table>
</div>


<div class="tables-sm">
<table class="table table-striped">
  <thead>
    <td><strong>Event_Name</strong></td>
  </thead>
  <tbody>
  <% @grouped.each do |group| %>
  <tr>
    <td><%= group.event_name %></td>
  </tr>
<% end %>
</tbody>
</table><%= @grouped.count %>


</div> 


</div>