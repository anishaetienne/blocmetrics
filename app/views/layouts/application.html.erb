<!DOCTYPE html>
<html>
<head>
  <title>Blocmetrics</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
    <%= render partial: 'layouts/user' %>
<% else %>
    <%= render partial: 'layouts/guest' %>
<% end %>

<!-- CONTAINER START -->

<div class="content">

<%= render partial: 'layouts/error' %>

<% if current_user %>
    <div class="user">
      <%= yield %>
    </div>
<% else %>
    <div class="guest">
      <%= yield %>
    </div>
<% end %>

</div>

<!-- CONTAINER END -->

</body>
</html>





